<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Praticar - l'application qui simplifie la conduite</title>
    <link rel="stylesheet" href="{{ asset('build/main.css') }}">
    <link href="https://fonts.googleapis.com/css?family=Roboto+Condensed:300,300i,400,400i,700,700i" rel="stylesheet">
    {% block additionnalCss %}{% endblock %}
</head>
<body>
{% if is_granted('ROLE_ADMIN') %}

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark d-flex justify-content-between">
        <a class="navbar-brand" href="#">Green yourself</a>
        <div>
            <button class="navbar-toggler collapsed" type="button" data-toggle="collapse" data-target="#navbarColor01"
                    aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse" id="navbarColor01" style="">
                <ul class="navbar-nav mr-auto">

                    {% if menu == 'event' %}
                    <li class="nav-item active">
                {% else %}
                    <li class="nav-item">
                        {% endif %}
                        <a class="nav-link" href="{{ path('adminEvents') }}"><i class="fa fa-calendar mr-2"></i>Évènements</a>
                    </li>

                    {% if menu == 'question' %}
                    <li class="nav-item active">
                {% else %}
                    <li class="nav-item">
                        {% endif %}
                        <a class="nav-link" href="{{ path('adminQuestions') }}"><i class="fa fa-question mr-2"></i>Questions</a>
                    </li>
                    {% if menu == 'survey' %}
                    <li class="nav-item active">
                {% else %}
                    <li class="nav-item">
                        {% endif %}
                        <a class="nav-link" href="{{ path('adminSurveys') }}"><i class="fa fa-archive mr-2"></i>
                            Questionnaires</a>
                    </li>
                    {% if menu == 'stat' %}
                    <li class="nav-item active">
                {% else %}
                    <li class="nav-item">
                        {% endif %}
                        <a class="nav-link" href="{{ path('adminStats') }}"><i class="fa fa-area-chart mr-2"></i>
                            Statistiques</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('adminLogout') }}"><i class="fa fa-power-off mr-2"></i>
                            Déconnexion</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
{% endif %}


<div class="{% block mainContainer %}container-fluid{% endblock %}">
    {% if is_granted('ROLE_ADMIN') %}
        {% block body %}
        {% endblock %}
    {% else %}
        {% block login %}
        {% endblock %}
    {% endif %}
</div>

<script type="application/javascript" src="{{ asset('build/app.js') }}"></script>
{% block js %}
{% endblock %}

</body>
</html>
