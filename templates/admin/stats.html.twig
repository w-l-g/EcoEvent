{% extends 'base.html.twig' %}
{% block mainContainer %}container{% endblock %}
{% block body %}
    <div class="row my-5">
        <div class="col-11 mx-auto text-white">
            <canvas id="myChart" width="400" height="400"></canvas>
        </div>
    </div>
{% endblock %}
{% block js %}
    <script>
        let ctx = document.getElementById("myChart");
        let myChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: ["Respect du site", "Déchet", "Alimentation",
                    "Déplacement", "Energie/eau/assainissement", "Accessibilité"],
                datasets: [{
                    label: 'Moyenne de la note sur 4',
                    data: [3, 2, 3.5, 2.3, 2.5, 4],
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.2)',
                        'rgba(54, 162, 235, 0.2)',
                        'rgba(255, 206, 86, 0.2)',
                        'rgba(75, 192, 192, 0.2)',
                        'rgba(153, 102, 255, 0.2)',
                        'rgba(255, 159, 64, 0.2)'
                    ],
                    borderColor: [
                        'rgba(255,99,132,1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)',
                        'rgba(75, 192, 192, 1)',
                        'rgba(153, 102, 255, 1)',
                        'rgba(255, 159, 64, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    yAxes: [{
                        ticks: {
                            beginAtZero: true
                        }
                    }]
                },
                legend: {
                    label: {
                        fontColor: 'white'
                    }

                }
            }
        });
    </script>
{% endblock %}
