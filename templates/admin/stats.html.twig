{% extends 'base.html.twig' %}
{% block mainContainer %}container{% endblock %}
{% block body %}
    <div class="row my-5">
        <div class="col">
            <div class="row">
                <div class="col d-flex justify-content-between text-white mb-5">
                    <div class="input-group my-auto">
                        <label for="inputGroupSelect01" class="my-auto mr-3 font-italic">Choisissez un évènement : </label>
                        <select class="custom-select-eco mr-3" id="inputGroupSelect01">
                            <option selected>Choisir</option>
                            <option value="1">Festival des vielles charrues</option>
                            <option value="2">Festival du bout du monde</option>
                            <option value="3">Festival interceltique</option>
                        </select>
                        <button type="submit" class="btn btn-primary" onclick="location.reload()">
                            Valider
                        </button>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-8 mx-auto">
                    <canvas id="myChart" width="400" height="400"></canvas>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block js %}
    <script>
        let ctx = document.getElementById("myChart");
        let myChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: ["Respect du site", "Déchet", "Alimentation",
                    "Déplacement", "Energie/eau/assainissement", "Accessibilité"],
                datasets: [{
                    label: 'Moyenne de la note 4 (Ensemble des évènements)',
                    data: [3, 2, 3.5, 2.3, 2.5, 4],
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.2)',
                        'rgba(54, 162, 235, 0.2)',
                        'rgba(255, 206, 86, 0.2)',
                        'rgba(75, 192, 192, 0.2)',
                        'rgba(153, 102, 255, 0.2)',
                        'rgba(255, 159, 64, 0.2)'
                    ],
                    borderColor: [
                        'rgba(255,99,132,1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)',
                        'rgba(75, 192, 192, 1)',
                        'rgba(153, 102, 255, 1)',
                        'rgba(255, 159, 64, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    yAxes: [{
                        ticks: {
                            beginAtZero: true
                        }
                    }]
                },
                legend: {
                    label: {
                        fontColor: 'white'
                    }

                }
            }
        });
    </script>
{% endblock %}
